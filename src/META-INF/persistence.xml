<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="PASPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>pas.models.db.Hulpbron</class>
    <class>pas.models.db.Toegang</class>
    <class>pas.models.db.Functie</class>
    <class>pas.models.db.Inschrijving</class>
    <class>pas.models.db.Privilege</class>
    <class>pas.models.db.Categorie</class>
    <class>pas.models.db.Faciliteit</class>
    <class>pas.models.db.Planning</class>
    <class>pas.models.db.Bestelling</class>
    <class>pas.models.db.Bewering</class>
    <class>pas.models.db.Lid</class>
    <class>pas.models.db.Product</class>
    <class>pas.models.db.Factuur</class>
    <class>pas.models.db.Reservering</class>
    <class>pas.models.db.Factuuritem</class>
    <class>pas.models.db.Cursus</class>
    <class>pas.models.db.Abonnering</class>
    <class>pas.models.db.Permissie</class>
    <class>pas.models.db.Werknemer</class>
    <class>pas.models.db.Vestiging</class>
    <class>pas.models.db.Abonnement</class>
    <class>pas.models.db.Betaling</class>
    <class>pas.models.db.Finance</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/PAS"/>
      <property name="javax.persistence.jdbc.password" value="pas"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.user" value="pas"/>
      <property name="eclipselink.allow-zero-id" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
